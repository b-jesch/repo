<?xml version="1.0"?>
<addon id="$id" name="$name" version="$version" provider-name="$provider">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="$name">
