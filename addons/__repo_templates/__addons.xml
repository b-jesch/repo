            <datadir zip="true">$root/addons</datadir>
        </dir>
        <dir minversion="18.9.0">
            <info compressed="true">$root/addons/matrix/addons.xml</info>
            <checksum>$root/addons/matrix/addons.xml.md5</checksum>
            <datadir zip="true">$root/addons/matrix/zip/</datadir>
        </dir>
        <dir minversion="17.9.0">
            <info compressed="true">$root/addons/leia/addons.xml</info>
            <checksum>$root/addons/leia/addons.xml.md5</checksum>
            <datadir zip="true">$root/addons/leia/zip/</datadir>
        </dir>
        <dir minversion="16.9.0">
            <info compressed="true">$root/addons/krypton/addons.xml</info>
